[Unit]
Description=Swarm Nexus - Memory Agent API
After=network.target

[Service]
WorkingDirectory=/opt/swarmnexus/agent
EnvironmentFile=/opt/swarmnexus/agent/.env
ExecStart=/usr/bin/node /opt/swarmnexus/agent/server.js
User=www-data
Group=swarm
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
